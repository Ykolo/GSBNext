{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:tailwindcss/recommended"
  ],
  "plugins": ["@typescript-eslint", "tailwindcss"],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "tailwindcss/no-custom-classname": "off"
  }
}
